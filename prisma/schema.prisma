generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  user_id  Int        @id @default(autoincrement())
  email    String     @unique @db.VarChar(30)
  password String     @db.VarChar(30)
  nickname String     @db.VarChar(30)
  favorite favorite[]
}

model court {
  court_id    Int     @id @default(autoincrement())
  court_name  String  @db.VarChar(200)
  address     String? @db.VarChar(200)
  telno       String? @db.VarChar(50)
  court_image String? @db.VarChar(500)
  lng         Decimal @db.Decimal(12, 8)
  lat         Decimal @db.Decimal(12, 8)

  details courtDetail[] // ★ 배열 필드, fields/references 없음
}

model courtDetail {
  court_detail_id       String  @id // UUID 등
  court_id              Int // FK
  detail_court_name     String  @db.VarChar(50)
  detail_operating_time String? @db.VarChar(50)
  target_user_info      String? @db.VarChar(50)

  court court @relation(fields: [court_id], references: [court_id])

  @@map("court_detail") // 실제 테이블명이 court_detail이면 유지
}

model favorite {
  favorite_id Int      @id @default(autoincrement())
  userId      Int
  created_at  DateTime @default(now())
  user        user     @relation(fields: [userId], references: [user_id])
}
